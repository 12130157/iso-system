<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- ************** log4net ****************** -->
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <connectionStrings>
    <add name="SMS.Properties.Settings.GSMConnectionString" connectionString="Data Source=ISO1;Initial Catalog=GSM;Persist Security Info=True;User ID=sa"
      providerName="System.Data.SqlClient" />
  </connectionStrings>
  <log4net debug="true">
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="SMS.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="1MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-5p %d %5rms %-22.22c{1} %-18.18M - %m%n" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="RollingLogFileAppender" />
    </root>
  </log4net>
  <!-- ************** End of log4net ****************** -->
  
  <appSettings>
    <!-- ***************** Parameters ******************* -->


    <add key="ConnectionString" value="server=ISO1;database=GSM;uid=sa;pwd=123456" />


    
      <!-- cho nay cac ban sua lai cho dung noi luu project -->
      <add key="RootFolder" value="C:\SVN data\hungvuongsystem\Development\Source\SMS" />
    <!-- ***************** End of Parameters ******************* -->

    <!-- ***************** SQL Statement ******************* -->
    
	  <!--********************Login*************************-->
    <add key="sql.getAdminByUserNameAndPassword" 
         value="	SELECT A.ten_dn AS 'TenDangNhap',A.mat_khau AS 'MatKhau'
	                FROM	thanhvien AS A
			                  INNER JOIN vaitro AS B
			                  ON A.ma_vai_tro = B.id
	                WHERE	A.ten_dn = @userName
			                  AND A.mat_khau = @password
			                  AND B.id = 0 " />
	
	  


    <add key ="sql.getMaxId" value="select max(id) as 'id' from hopthudi"/>
    
    
    <!-- ***************** End of SQL Statement ******************* -->

    <add key="ClientSettingsProvider.ServiceUri" value="" />
  </appSettings>

  <system.web>
